<resources>
    <!-- Base application theme. -->
    <style name="Theme.Udacity_kotlin_capstone_4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/colorTextOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- COMPONENTS -->
        <!-- Button -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <!-- TextInputLayout -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <!-- TextInputEditText-->
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>

    </style>

    <!-- No Action Bar -->
    <style name="Theme.Udacity_kotlin_capstone_4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Material Button -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="tint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Theme.Udacity_kotlin_capstone_4" >
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextAppearance">@style/textInputLayoutHintStyle</item>
    </style>
    <style name="textInputLayoutHintStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- TextInputEditText -->
    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText" >
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
    </style>

</resources>